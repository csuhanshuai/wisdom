<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marging_8"
                android:background="@android:color/white"
                android:foreground="?attr/selectableItemBackground"
                android:orientation="horizontal"
                android:padding="@dimen/activity_horizontal_margin">

    <Space
        android:id="@+id/center"
        android:layout_width="1dip"
        android:layout_height="1dip"
        android:layout_centerInParent="true"/>

    <ImageView
        android:id="@+id/im_item_grid_recommend"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/center"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:clickable="true"
        tools:src="@drawable/ic_empty_page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/marging_8"
        android:paddingRight="@dimen/marging_8">

        <TextView
            android:id="@+id/tv_item_grid_atten"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:foreground="?attr/selectableItemBackground"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/item_atten_text"
            tools:text="cehiscfffffhdddddddddddddddddihih"/>

        <Button
            android:id="@+id/btn_item_grid_atten"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@drawable/item_gridview_atten_bg"
            android:singleLine="true"
            android:text="@string/gridv_atten"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/item_atten_text"/>

    </LinearLayout>
</RelativeLayout>