<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:padding="10dp"
                android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/iv_item_music"
        android:scaleType="fitXY"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_empty_page"/>

    <TextView
        android:id="@+id/tv_item_music"
        android:layout_toRightOf="@id/iv_item_music"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="如何提高教学技术"
        android:textColor="#aa000000"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxEms="10"
        android:textSize="16sp"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btn_item_music"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="下载"
        android:focusable="false"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/select_btn"
        android:textSize="16sp" />


</RelativeLayout>